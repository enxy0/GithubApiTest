<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:windowBackground">@color/background</item>
    </style>


    <!-- Base styles -->
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Secondary" parent="Text">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text.Primary" parent="Text">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="Image" />

    <!-- Styles impl -->
    <style name="Text.Repository" parent="Text.Primary">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Author" parent="Text.Secondary">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Avatar">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Card.Repository" parent="Card">
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Image.Avatar" parent="Image">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>
</resources>